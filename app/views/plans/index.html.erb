<div>
    <% @plans = Plan.order(start_datetime: :asc) %>
    <p><%= @plans.first.title %></p>
      <% if @plans.first.start_datetime.strftime('%-d') < @plans.first.end_datetime.strftime('%-d') %>
    <p><%= @plans.first.start_datetime.strftime('%a %-d %b %I:%M%P') %> - <%= @plans.first.end_datetime.strftime('%a %-d %b %I:%M%P') %></p>
      <% else %>
      <p><%= @plans.first.start_datetime.strftime('%a %-d %b %I:%M%P') %> - <%= @plans.first.end_datetime.strftime('%I:%M%P') %></p>
    <% end %>
