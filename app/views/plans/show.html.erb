<img src="<%= @plan.image %>" alt="" class="plan-image">
<div class="container-fluid bg-white" >
<div class="card">
  <div class="card-body">
<h1 class="display-6"><%= @plan.title %> </h1>
    <p> <%= @plan.description %> </p>
    <%= link_to '<i class="bi bi-pencil-fill"></i>'.html_safe, edit_plan_path %>
    <%= link_to '<i class="bi bi-trash-fill"></i>'.html_safe, plan_path(@plan), data: {
                    turbo_method: :delete
                  } %>

<% if @organiser != current_user %>
  <div class="d-flex align-items-center">
    <p> <%= render "shared/add_status_form" %> </p>
  </div>
<% end %>
<div class="d-flex align-items-center">
  <i class="bi bi-piggy-bank-fill"></i>
  <span class="ms-2">Â£<%= @plan.cost %></span></span>
</div>
<div class="d-flex align-items-center">
  <i class="bi bi-stars"></i>
  <span class="ms-2"><%=@organiser == current_user ? "You are" : "#{@organiser.nickname} is"%> organising</span>
</div>
<div class="d-flex align-items-center">
  <i class="bi bi-clock-fill"></i>
  <span class="ms-2"><%= @plan.start_datetime.strftime('%a %e %b %l:%M %p') %></span>
</div>
<div class="d-flex align-items-center">
  <i class="bi bi-geo-alt-fill"></i>
  <span class="ms-2"><%= @plan.location %></span>
</div>
<div class="d-flex align-items-center">
  <i class="bi bi-people-fill"></i>
  <div class="ms-2">
    <% @plan.participants.each do |participant| %>
      <small class="d-inline-flex mb-1 px-2 py-1 fw-semibold text-success-emphasis bg-success-subtle border border-success-subtle rounded-2">
        <%= participant.user.nickname %>
        <%= participant.status %>
      </small>
    <% end %>
  </div>
</div>

<%= render "shared/add_friends_form" %>



<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
</div>
</div>
