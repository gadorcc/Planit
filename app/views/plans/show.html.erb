<img src="<%= @plan.image %>" alt="" class="plan-image">
<div class="container-fluid bg-white" data-controller="jumping" data-jumping-position-value="beforeend">
  <div class="card">
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col">
          <div class="back-btn mb-2">
            <%= link_to plans_path do %>
              <i class="bi bi-chevron-left"></i> all plans
            <% end %>
          </div>
        </div>
        <div class="col">
          <div class="d-flex flex-row-reverse">
            <div class="p-2">
              <%= link_to '<i class="bi bi-pencil-fill"></i>'.html_safe, edit_plan_path(@plan) %>
            </div>
            <div class="p-2">
              <%= link_to '<i class="bi bi-trash-fill"></i>'.html_safe, plan_path(@plan), data: {
                turbo_method: :delete
              } %>
            </div>
          </div>
        </div>
      </div>
      <div class="row align-items-center">
        <div class="col">
          <h1 class="display-6"><%= @plan.title %></h1>
        </div>
        <div class="col d-flex justify-content-end">
  <% if @organiser != current_user %>
  <div class="d-flex align-items-center" data-controller="dropdown">
    <%= render "shared/add_status_form" %>
  </div>
<% end %>
</div>
      </div>
      <p><%= @plan.description %></p>


<div class="d-flex align-items-center pb-1">
  <i class="bi bi-piggy-bank-fill"></i>
  <span class="ms-2">Â£<%= @plan.cost.to_i %></span></span>
</div>
<div class="d-flex align-items-center pb-1">
  <i class="bi bi-stars"></i>
  <span class="ms-2"><%= @organiser == current_user ? "You are" : "#{@organiser.nickname} is"%> organising</span>

</div>
<div class="d-flex align-items-center pb-1">
  <i class="bi bi-clock-fill"></i>
  <span class="ms-2"><%= @plan.start_datetime.strftime('%a %e %b %l:%M %p') %></span>
</div>
<div class="d-flex align-items-center pb-1">
  <i class="bi bi-geo-alt-fill"></i>
  <span class="ms-2"><%= @plan.location %></span>
</div>
<div class="d-flex align-items-center pb-1">
  <i class="bi bi-people-fill"></i>
  <div class="ms-2 participants" data-jumping-target="participant">
    <% @plan.participants.each do |participant| %>
       <%= render "plans/participant_status", participant: participant %>

    <% end %>
  </div>
</div>

<%= render "shared/add_friends_form" %>



<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
</div>
</div>
