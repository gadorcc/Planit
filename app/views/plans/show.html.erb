<div class="container-fluid bg-white" >
<div class="card">
<div class="back-btn ms-2 mt-2"><%= link_to plans_path do %><i class="bi bi-chevron-left"></i> all plans <% end %></div>
  <div class="card-body">
    <div class="row">
    <div class="col">
      <h1 class="display-6"><%= @plan.title %> </h1>
    </div>
    <div class="col justify-content-right">
    <div class="d-flex flex-row-reverse">
  <div class="p-2"><%= link_to '<i class="bi bi-pencil-fill"></i>'.html_safe, edit_plan_path %></div>
  <div class="p-2"><%= link_to '<i class="bi bi-trash-fill"></i>'.html_safe, plan_path(@plan), data: {
                    turbo_method: :delete
                  } %></div>

</div>


    </div>
  </div>

    <p> <%= @plan.description %> </p>


<% if @organiser != current_user %>
  <div class="d-flex align-items-center" data-controller="dropdown">
    <%= render "shared/add_status_form" %>
  </div>
<% end %>
<div class="d-flex align-items-center">
  <i class="bi bi-piggy-bank-fill"></i>
  <span class="ms-2">Â£<%= @plan.cost %></span></span>
</div>
<div class="d-flex align-items-center">
  <i class="bi bi-stars"></i>
  <span class="ms-2"><%=@organiser == current_user ? "You are" : "#{@organiser.nickname} is"%> organising</span>
</div>
<div class="d-flex align-items-center">
  <i class="bi bi-clock-fill"></i>
  <span class="ms-2"><%= @plan.start_datetime.strftime('%a %e %b %l:%M %p') %></span>
</div>
<div class="d-flex align-items-center">
  <i class="bi bi-geo-alt-fill"></i>
  <span class="ms-2"><%= @plan.location %></span>
</div>
