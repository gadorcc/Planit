<%= simple_form_for @plan, data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :title, label: "Plan's name"%>
  <%= f.input :description %>
  <%= f.input :start_datetime, as: :string, input_html: { data: { flatpickr_target: "startDate" } } %>
  <%= f.input :end_datetime, as: :string, input_html: { data: { flatpickr_target: "endDate" } } %>
  <%= f.input :cost, label: 'Budget per friend' %>
  <%= f.input :location %>
  <%= submit_tag "Planit", class: "btn btn-primary" %>
<% end %>
